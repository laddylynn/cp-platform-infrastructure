{
    "variables": {
      "project_id": "sandbox-272805",
      "bdb_prefix": "/home/coolbitx/storage/litecoin/db4",
      "litecoin_root": "/home/coolbitx/storage/litecoin",
      "userId": "coolbitx",
      "source_image": "ubuntu-1910-eoan-v20200331",
      "google_application_credentials": "/etc/google/auth/application_default_credentials.json"
    },
    "builders": [
      {
        "type": "googlecompute",
        "project_id": "{{user `project_id`}}",
        "source_image": "{{user `source_image`}}",
        "disk_size": "120",
        "zone": "asia-east1-a",
        "image_description": "created-with-packer",
        "image_name": "litecoin-dev-{{timestamp}}",
        "ssh_username": "{{user `userId`}}",
        "tags": "packer",
        "account_file": "../../../../../account.json"
      }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "litecoin.conf",
            "destination": "~/litecoin.conf"
        },
        {
            "type": "file",
            "source": "fluentd.conf",
            "destination": "~/fluentd.conf"
        },
        {
            "type": "file",
            "source": "../../../../../account.json",
            "destination": "~/temp.json"
        },
        {
            "type": "shell",
            "inline":[
                "mkdir ~/storage",
                "cd ~/storage",
                "git clone https://github.com/litecoin-project/litecoin.git",
                "mkdir -p {{user `bdb_prefix`}}",
                "wget 'http://download.oracle.com/berkeley-db/db-4.8.30.NC.tar.gz'",
                "echo '12edc0df75bf9abd7f82f821795bcee50f42cb2e5f76a6a281b85732798364ef  db-4.8.30.NC.tar.gz' | sha256sum -c",
                "tar -xzvf db-4.8.30.NC.tar.gz",
                "sed -i 's/__atomic_compare_exchange/__atomic_compare_exchange_db/g' db-4.8.30.NC/dbinc/atomic.h",
                "cd db-4.8.30.NC/build_unix/",
                "sudo apt-get -y update",
                "sudo apt-get install -y build-essential libtool autotools-dev automake pkg-config libssl-dev libevent-dev bsdmainutils",
                "sudo apt-get install -y libboost-system-dev libboost-filesystem-dev libboost-chrono-dev libboost-program-options-dev libboost-test-dev libboost-thread-dev",
                "../dist/configure --enable-cxx --disable-shared --with-pic --prefix={{user `bdb_prefix`}}",
                "make install",
                "cd ~/storage",
                "rm db-4.8.30.NC.tar.gz",
                "cd {{user `litecoin_root`}}",
                "sudo ./autogen.sh",
                "sudo ./configure LDFLAGS=\"-L{{user `bdb_prefix`}}/lib/\" CPPFLAGS=\"-I{{user `bdb_prefix`}}/include/\" CXXFLAGS=\"--param ggc-min-expand=1 --param ggc-min-heapsize=32768\" --enable-upnp-default --without-gui",
                "sudo make",  
                "sudo make install",
                "cd src",
                "strip litecoind"
            ]
        },
        {
            "type": "shell",
            "inline":[
                "echo hi litecoin >> ~/storage/litecoin.log",
                "mkdir .litecoin",
                "sudo mv ~/litecoin.conf ~/.litecoin/",
                "mkdir -p ~/litecoin/bin",
                "sudo chown -R {{user `userId`}}:{{user `userId`}} ~/.litecoin/litecoin.conf",
                "cd .litecoin",
                "chmod 0600 litecoin.conf",
                "cp ~/storage/litecoin/src/litecoind ~/litecoin/bin/litecoind",
                "cp ~/storage/litecoin/src/litecoin-cli ~/litecoin/bin/litecoin-cli"
            ]
        },
        {
            "type": "shell",
            "inline":[
               "sudo mkdir -p /etc/google/auth",
               "sudo mv ~/temp.json {{ user `google_application_credentials` }}",
               "sudo chown root:root {{ user `google_application_credentials` }}",
               "sudo chmod 0400 {{ user `google_application_credentials` }}",
               "curl -sSO https://dl.google.com/cloudagents/add-logging-agent-repo.sh",
               "sudo bash add-logging-agent-repo.sh",
               "sudo apt-get update",
               "sudo apt-cache madison google-fluentd",
               "sudo apt-get install -y 'google-fluentd=1.*'",
               "sudo apt-get install google-fluentd",
               "sudo apt-get install -y google-fluentd-catch-all-config-structured",
               "sudo mv ~/fluentd.conf /etc/google-fluentd/config.d/litecoin.conf"
            ]
        }
    ]
  }
  